
{% block body %}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
<form method="post" action="{{ path('stream_delete', {'id': stream.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stream.id) }}">
    <button class="btn">Delete</button>
</form>
</main>
{% endblock %}